<Window x:Class="Anime_Store.AccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Anime_Store"
        mc:Ignorable="d"
        Title="AccountWindow" MinHeight="600" MinWidth="1010" Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">
    <Border Padding="10" Background="#FF2E2C2C">
        <StackPanel Background="#FF2E2C2C">
            <!-- Back to Menu / Save -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="BackToMenuButton" Content="Back To Menu" Style="{StaticResource ButtonStyle}" Template="{StaticResource ButtonTemplate}" Grid.Column="0" Height="42" Width="120" Background="#FF4DC932" HorizontalAlignment="Left" Click="BackToMenuButton_Click"/>
            </Grid>
        </StackPanel>
    </Border>
</Window>
